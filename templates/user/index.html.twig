{% extends 'base.html.twig' %}

{% block title %}Les Utilisateurs !{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="row">
            <div class="col-6">
                <h2 class="bg bg-danger body-color text-center p-2 text-white fw-bold">{{ 'user.list'|trans }}</h2><br>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-info text-white p-2" href="{{ path('user_new') }}">
                    {{ 'user.index.new'|trans }}
                </a>
            </div>
        </div>
        <table class="table navbar-color table-bordered text-center table-hover">
            <thead>
            <tr>
                <th>{{ 'user.index.table.firstname'|trans }}</th>
                <th>{{ 'user.index.table.lastname'|trans }}</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% if users|length > 0 %}
                {% for user in users %}
                    <tr>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>
                            <a class="logo-link"
                               href="{{ path('user_edit', {'id': user.id}) }}"
                            ><i class="fas fa-pencil-alt"></i>
                            </a>
                            <a class="logo-link text-danger"
                               href="{{ path('user_delete', {'id': user.id}) }}"
                            ><i class="fas fa-trash-alt"></i>
                            </a>
                            <a class="logo-link"
                               href="{{ path('user_show', {'id': user.id}) }}"
                            ><i class="far fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="5">{{ 'user.index.table.empty'|trans }}</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>

{% endblock %}
