{% extends 'base.html.twig' %}

{% block title %}
    {{ 'user.show.title'|trans({'%name%': user.firstName}) }}
{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="card border-0. w-100">
                    <div class="card-body">
                        <h5 class="card-title">Email: {{ user.email }}</h5>
                        <p class="card-text">Nom de famille : {{ user.lastName }}</p>
                        <p class="card-text">Prénom : {{ user.firstName }}</p>
                        <p class="card-text">Adresse Postale : {{ user.address }}</p>
                        <p class="card-text">Seconde adresse : {{ user.secondAddress }}</p>
                        <p class="card-text">Date de naissance : {{ user.birthAt|date('d-m-Y') }}</p>
                        <p class="card-text">Ville : {{ user.city }}</p>
                        <p class="card-text">Pays : {{ user.country }}</p>
                        <p class="card-text">Numéro de téléphone : {{ user.telephone }}</p>
                        <a class="btn btn-outline-primary my-2" href="{{ path('user_index') }}">
                            {{ 'user.home'|trans }} </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

