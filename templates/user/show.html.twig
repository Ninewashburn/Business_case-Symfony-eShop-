{% extends 'base.html.twig' %}

{% block title %}
    {{ 'user.show.title'|trans({'%name%': user.firstName}) }}
{% endblock %}

{% block body %}

    <div class="container mt-5">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <div class="card border-0. w-100">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.firstName }}</h5>
                        <p class="card-text">{{ user.lastName }}</p>
                        <a class="btn btn-outline-primary my-2" href="{{ path('user_index') }}">
                            {{ 'user.home'|trans }} </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

