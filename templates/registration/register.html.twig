{% extends 'base.html.twig' %}

{% block title %}Créez votre compte !{% endblock %}

{% block body %}
    <h1>Créez votre compte !</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email, {
            label:'Votre Email'
        }) }}
        {{ form_row(registrationForm.firstName, {
            label:'Votre Prénom'
        }) }}
        {{ form_row(registrationForm.lastName, {
            label:'Votre Nom de famille'
        }) }}
        {{ form_row(registrationForm.birthAt, {
            label:'Renseignez vote date de naissance'
        }) }}
        {{ form_row(registrationForm.telephone, {
            label:'Numéro de téléphone'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(registrationForm.agreeTerms,{
            label: 'Condition d\'utilisation'
        }) }}

        <button type="submit" class="btn btn-primary">Créer votre compte</button>
    {{ form_end(registrationForm) }}
{% endblock %}
