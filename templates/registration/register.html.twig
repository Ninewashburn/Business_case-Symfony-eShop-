{% extends 'base.html.twig' %}

{% block title %}Créez votre compte !{% endblock %}

{% block body %}
    <div class="container-fluid col-6 mt-4">

        {{ form_start(registrationForm) }}

        <h1 class="h3 mb-3 text-center font-weight-normal">Créez votre compte !</h1>

        <div class="py-1">
            {{ form_row(registrationForm.email, {
                label:'Votre Email',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.plainPassword, {
                label: 'Mot de passe',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.firstName, {
                label:'Votre Prénom',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.lastName, {
                label:'Votre Nom de famille',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.birthAt, {
                label:'Votre date de naissance',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.address, {
                label:'Adresse',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.secondAddress, {
                label:'Adresse secondaire',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.city, {
                label:'Ville',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.country, {
                label:'Pays',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.telephone, {
                label:'Numéro de téléphone',
                attr: { class: 'form-control'}
            }) }}
        </div>
        <div class="py-1">
            {{ form_row(registrationForm.agreeTerms,{
                label: 'Condition d\'utilisation',
                attr: { class: 'form-check-input'}
            }) }}
        </div>
        <div class="py-2 text-center">
            <button type="submit" class="btn btn-primary">Créer votre compte</button>
            {{ form_end(registrationForm) }}</div>
    </div>
{% endblock %}
