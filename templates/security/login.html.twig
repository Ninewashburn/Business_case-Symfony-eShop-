{% extends 'base.html.twig' %}

{% block title %}Connectez-vous au monde !{% endblock %}

{% block body %}
    <div class="container-fluid col-6 mt-5">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Veuillez vous identifier</h1><br>
            <label for="inputEmail">Adresse Email</label><br><br>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                   autocomplete="email" required autofocus><br>
            <label for="inputPassword">Mot de passe</label><br><br>
            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password"
                   required><br>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Connexion
            </button>
            <br><br>
            <div>
                <p>Vous n'avez pas de compte ?
                    <a class="btn btn-lg btn-light" href="{{ path('app_register') }}">S'inscrire</a>
                </p>
            </div>
        </form>
    </div>
{% endblock %}
