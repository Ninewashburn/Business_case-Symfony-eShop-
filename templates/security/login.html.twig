{% extends 'base.html.twig' %}

{% block title %}Connectez-vous au monde !{% endblock %}

{% block body %}
    <div class="container-fluid col-6 mt-4">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que : {{ app.user.username }}, <a href="{{ path('app_logout') }}">Se
                        déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 text-center font-weight-normal">Veuillez vous identifier</h1>
            <label class="py-1" for="inputEmail">Adresse Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control"
                   autocomplete="email" required autofocus>
            <label class="py-1" for="inputPassword">Mot de passe</label>
            <input type="password" name="password" id="inputPassword" class="form-control"
                   autocomplete="current-password"
                   required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            ><br>

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}
            <div class="container mt-3">
                <div class="row">
                    <button class="col-6 btn btn-primary" type="submit">
                        Connexion
                    </button>
                    <a class="col-6 btn btn-outline-primary" href="{{ path('app_register') }}">S'inscrire</a></div>
            </div>
        </form>
    </div>

{% endblock %}
